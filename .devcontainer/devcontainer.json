{
  "name": "ROS 2 Development Container",
  "privileged": true,
  "remoteUser": "DockerUser",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "USERNAME": "DockerUser"
    }
  },
  "workspaceFolder": "/ros_ws",
  "workspaceMount": "source=${localWorkspaceFolder},target=/ros_ws/src,type=bind",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-themes",
        "twxs.cmake",
        "donjayamanne.python-extension-pack",
        "ms-iot.vscode-ros"
      ]
    }
  },
  "containerEnv": {
    "DISPLAY": "host.docker.internal:0",
    "ROS_LOCALHOST_ONLY": "1",
    "ROS_DOMAIN_ID": "42"
  },
  "runArgs": [
    "--net=host",
    "--pid=host",
    "--ipc=host",
    "-e",
    "DISPLAY=${env:DISPLAY}"
  ],
  // ... other devcontainer.json configurations
  "postCreateCommand": "/bin/bash -c 'chmod +x /ros_ws/src/.devcontainer/setup.sh && /ros_ws/src/.devcontainer/setup.sh'",
  "onCreateCommand": "/bin/bash -c 'echo \"source /opt/ros/jazzy/setup.bash && source /ros_ws/install/setup.bash\" >> /home/DockerUser/.bashrc'"
}